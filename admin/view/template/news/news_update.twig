<!--  le header vient du controller news (common....) -->

 <!-- ceci est un echo $data['header]; -->
{{ header }}
<div id="information-information" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <!-- configuration de la page avec 12 collonne  -->
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
     <!-- ligne 23 et 231  ne sont pas par default -->
      <h1>{{ heading_title }}</h1>
      <a href="{{news.add}}" class = "btn btn-primary">{{ text_add }}</a>
     <table class="mx-auto" style="width: 250px;"> 
     <th>Title</th>
     <th>Author</th>
     <th>Link</th>
     {% for news in all_news %}
     <tr>
        <td> {{news.title}} </td>
        <td> {{news.author}} </td>
        <td class="mx-auto" style="width: 200px;">
            <a href="{{news.update}}" class = "btn btn-primary">{{ text_update }}</a>
        </td>
        <td class="mx-auto" style="width: 200px;">
          <a href="{{news.delete}}" class = "btn btn-primary">{{ text_delete }}</a>
        </td>
     </tr>
     {% endfor %}
     
     </table>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}