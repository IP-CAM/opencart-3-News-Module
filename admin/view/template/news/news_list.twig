<!--  le header vient du controller news (common....) -->

 <!-- ceci est un echo $data['header]; -->
{{ header }}
<div id="information-information" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <!-- configuration de la page avec 12 collonne  -->
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
     <!-- ligne 23 et 231  ne sont pas par default -->
      <h1>{{ heading_title }}</h1>
      <div style="margin-bottom: 20px">
      <a href="{{create}}" class = "btn btn-primary">{{ text_create }}</a>
      </div>
     <table class="mx-auto" style="width: 250px;"> 

      <th style="padding-right: 65px;">{{text_title}}</th>
      <th style="padding-right: 65px; padding-left: 5px" >{{text_author}}</th>
      <th style="padding-right: 50px; padding-left: 5px">{{text_link}}</th>
        {% for news in all_news %}
        <tr style="height: 10px"></tr>
        <tr style="transform: translate(0,5px);">

            <td > {{news.title}} </td>
          
            <td > {{news.author}} </td>

            <td class="mx-auto" style="width: 200px;">
                <a href="{{news.update}}" class = "btn btn-primary">{{ text_update }}</a>
            </td>
            <td class="mx-auto" style="width: 200px;">
              <a href="{{news.delete}}" class = "btn btn-primary">{{ text_delete }}</a>
            </td>
          
        </tr>
        <tr style="height: 10px"></tr>
        {% endfor %}
     
     </table>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}